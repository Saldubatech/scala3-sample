<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %-5level [%thread] %logger: %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="console" />
  </root>
  <logger name="com.saldubatech.sandbox" level="debug">
    <appender-ref ref="console" />
  </logger>

</configuration>
